<Window x:Class="BignoMessaggistica_live.AddChatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aggiungi Chat" Height="200" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" Text="Inserisci il numero di telefono:"/>
        <TextBox Name="TelefonoTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0,30,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Annulla" Width="80" Height="30" Margin="10" Click="AnnullaButton_Click"/>
            <Button Content="Aggiungi" Width="80" Height="30" Margin="10" Click="AggiungiButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
